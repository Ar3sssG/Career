@model List<CareerCommon.CareerViewModels.JobsViewModel>

@if (Model.Count() == 0)
{
    <li class="list-group-item d-flex justify-content-between align-items-start text-danger">
        You do not have Posted Jobs =(
    </li>
}
@foreach (var item in Model)
{
    if (!item.IsActive)
    {
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold "><a href="#" style="text-decoration:none;color:forestgreen">@item.Title</a></div>
                @item.IndustryName
                <br />
                <div style="color:forestgreen">Posted Date : @Html.DisplayFor(model => item.PostedDate)</div>
            </div>
            <span class="badge bg-danger rounded-pill">Deactivated</span>
        </li>
    }
    else
    {
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold"><a href="#" style="text-decoration:none;color:forestgreen">@item.Title</a></div>
                @item.IndustryName
                <br />
                <div style="color:forestgreen">Posted Date : @Html.DisplayFor(model => item.PostedDate)</div>
            </div>
            <span class="badge bg-success rounded-pill">@item.Applications.Count()</span><br />
        </li>
    }
}