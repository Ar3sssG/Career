@using Microsoft.AspNetCore.Identity
@model CareerCommon.CareerViewModels.RegisterViewModel

@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Sign up";
}

@if (SignInManager.IsSignedIn(User))
{
    Context.Response.Redirect("/Home/Index");
}

<div class="container">

    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4 d-flex flex-column min-vh-100 d-flex aligns-items-center justify-content-center">
            <div class="row align-middle">
                <h1 class="display-5 text-center">Sign up</h1>
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <br />
                    </div>
                    <div class="form-group d-grid gap-2">
                        <input type="submit" value="Sign Up" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
            <div class="col-md-4">

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
